Bootstrap: docker
From: ubuntu:20.04

%post
    apt-get update && apt-get install -y \
        mpich \
        cmake \
        g++ \
        git
    mkdir /app
    cd /app
    git clone https://github.com/YOUR_USERNAME/SE4HPC_project_part2.git
    cd SE4HPC_project_part2
    cmake .
    make

%runscript
    exec mpirun -np 4 ./matrix_multiplication matrixA.txt matrixB.txt
